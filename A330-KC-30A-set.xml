<PropertyList include="A330-main.xml">

	<sim>

		<sound>
			<path>Aircraft/IDG-A33X/Sounds/cf680-sound.xml</path>
		</sound>
	
		<description>Airbus KC-30A (GE CF6-80E1A3)</description>
		<flight-model>jsb</flight-model>
		<aero>A330-KC-30A</aero>
		<model>
			<path>Aircraft/IDG-A33X/Models/KC-30A.xml</path>
			<livery>
				<file>Grey</file>
			</livery>
		</model>
		
		<previews>
			<preview>
				<type>exterior</type>
				<splash type="bool">true</splash>
				<path>Splash/KC-30A.png</path>
			</preview>
		</previews>
		
		<chase-distance-m type="double" archive="y">-130.0</chase-distance-m>
		<view>
			<name>Pilot View</name>
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">-0.42</x-offset-m>
				<y-offset-m archive="y">1.43</y-offset-m>
				<z-offset-m archive="y">-19.9573</z-offset-m>
				<pitch-offset-deg archive="y">-12.0</pitch-offset-deg>
			</config>
		</view>
		<view n="100">
			<name>Copilot View</name>
			<type>lookfrom</type>
			<internal archive="y">true</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">0.42</x-offset-m>
				<y-offset-m archive="y">1.43</y-offset-m>
				<z-offset-m archive="y">-19.9573</z-offset-m>
				<pitch-offset-deg archive="y">-12.0</pitch-offset-deg>
			</config>
		</view>
		<view n="101">
			<name>Overhead Panel View</name>
			<type>lookfrom</type>
			<internal archive="y">true</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">0</x-offset-m>
				<y-offset-m archive="y">1.47</y-offset-m>
				<z-offset-m archive="y">-19.96</z-offset-m>
				<pitch-offset-deg archive="y">38</pitch-offset-deg>
				<default-field-of-view-deg type="double">90</default-field-of-view-deg>
			</config>
		</view>
		<view n="102">
			<name>Left Front View</name>
			<type>lookfrom</type>
			<internal archive="y">false</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">-3.68</x-offset-m>
				<y-offset-m archive="y">1.47</y-offset-m>
				<z-offset-m archive="y">-6.49</z-offset-m>
				<heading-offset-deg>129</heading-offset-deg>
				<default-field-of-view-deg type="double">85</default-field-of-view-deg>
			</config>
		</view>
		<view n="103">
			<name>Right Mid View</name>
			<type>lookfrom</type>
			<internal archive="y">false</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">3.68</x-offset-m>
				<y-offset-m archive="y">1.47</y-offset-m>
				<z-offset-m archive="y">4.52</z-offset-m>
				<heading-offset-deg>257</heading-offset-deg>
				<default-field-of-view-deg type="double">85</default-field-of-view-deg>
			</config>
		</view>
		<view n="104">
			<name>Left Aft View</name>
			<type>lookfrom</type>
			<internal archive="y">false</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m archive="y">-3.68</x-offset-m>
				<y-offset-m archive="y">1.47</y-offset-m>
				<z-offset-m archive="y">11.6</z-offset-m>
				<heading-offset-deg>75</heading-offset-deg>
				<default-field-of-view-deg type="double">85</default-field-of-view-deg>
			</config>
		</view>
		
		<menubar>
			<default>
				<menu n="100">
					<item n="2">
						<label>Toggle Boom</label>
						<binding>
							<command>nasal</command>
							<script>
							refuel_control.toggleBoom();
							</script>
						</binding>
					</item>
					<item n="3">
						<label>Toggle Drogues</label>
						<binding>
							<command>nasal</command>
							<script>
							refuel_control.toggleDrogues();
							</script>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>
		
		<systems n="0">
            <autopilot n="0">
                <path>Aircraft/IDG-A33X/Systems/fadec-ge.xml</path>
            </autopilot>
		</systems>
		
	</sim>
	
	<options n="0">
		<!--EIS2 type="bool">0</EIS2-->
		<eng>GE</eng>
		<maxblock>306.6</maxblock>
		<hasboom type="bool">0</hasboom>
		<boom-pos-norm type="double">0</boom-pos-norm>
		<drogue-pos-norm type="double">0</drogue-pos-norm>
	</options>
	
	<MCDUC n="0">
		<type>KC-30A</type>
		<eng>CF6-80E1A3</eng>
	</MCDUC>
	
	<nasal>
		<specific>
			<file>Aircraft/IDG-A33X/Nasal/a332livery-kcge.nas</file>
		</specific>
		<fadec>
			<file>Aircraft/IDG-A33X/Nasal/fadec-ge.nas</file>
		</fadec>
		<damage>
			<file>Aircraft/IDG-A33X/Nasal/damage.nas</file>
		</damage>
		<refuel_control>
			<file>Aircraft/IDG-A33X/Nasal/refuel-control.nas</file>
		</refuel_control>
	</nasal>

</PropertyList>
