			<x-m>-0.1</x-m>
			<y-m>-0.2</y-m>
			<z-m>0.6</z-m>
		</offsets>
	</model>
	
	<model>
		<name>chock_right</name>
		<path>Aircraft/IDG-A33X/Models/Services/Chocks/chock_right.ac</path>
		<condition>
			<equals>
				<property>services/chokes/right</property>
				<value>1</value>
			</equals>
		</condition>
		<offsets>
			<x-m>-0.1</x-m>
			<y-m>0.2</y-m>
			<z-m>0.6</z-m>
