<PropertyList>
	<name>A330-groundservices</name>
	
	<!-- Chocks -->
	
	<model>
		<name>chock_nose</name>
		<path>Aircraft/IDG-A33X/Models/Services/Chocks/chock_nose.ac</path>
		<condition>
			<equals>
				<property>services/chokes/nose</property>
				<value>1</value>
			</equals>
		</condition>
		<offsets>
			<x-m>-2.97</x-m>
			<z-m>0.6</z-m>
		</offsets>
	</model>
	
	<model>
		<name>chock_left</name>
		<path>Aircraft/IDG-A33X/Models/Services/Chocks/chock_left.ac</path>
